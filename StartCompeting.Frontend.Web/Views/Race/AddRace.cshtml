@{
    ViewBag.Title = "AddRace";
}

<h2>AddRace</h2>
<div></div>
<div class="row">
    <div class="col-lg-12">
        <h1>Forms <small>Enter Your Data</small></h1>
        <ol class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active"><i class="fa fa-edit"></i> Forms</li>
        </ol>
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Visit <a class="alert-link" target="_blank" href="http://getbootstrap.com/css/#forms">Bootstrap's Form Documentation</a> for more information.
        </div>
    </div>
</div><!-- /.row -->

<div class="row">
    <div class="col-lg-6">

        <form ng-controller="homeController" ng-submit="submit()">

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="name" ng-model="formData.name">
            </div>

            <div class="form-group">
                <label>Selects</label>
                <select ng-model="formData.Id" class="form-control" ng-options="r.Id as r.Name for r in raceTypes"></select>
            </div>

            <div class="form-group">
                <label>Race length (km)</label>
                <input class="form-control" name="raceLength" ng-model="formData.raceLength">
            </div>

            <div class="form-group">
                <input type="submit" value="Save" ngclick="Submit" />
            </div>
        </form>
    </div>
    <pre>
		{{ formData }}
	</pre>
</div><!-- /.row -->
<!-- JavaScript -->
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
